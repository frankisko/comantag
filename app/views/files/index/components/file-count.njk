<script type="text/x-template" id="file-count-template">
    {% raw %}
        <h1 class="h3 mb-2 text-gray-800">Files ({{ file_count }})</h1>
    {% endraw %}
</script>

<script type="text/javascript">
    Vue.component("file-count", {
        template: '#file-count-template',
        data : function () {
            return {
                file_count: 0
            };
        },
        mounted: function() {
            this.$root.$on('render-file-count', (file_count) => {
                this.file_count = file_count;
            });
        }
    });
</script>